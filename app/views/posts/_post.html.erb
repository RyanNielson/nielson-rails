<div class="col-md-6 col-sm-6">
  <h2>
    <%= link_to post.title, post_path(post.slug) %>
  </h2>
  <!-- <h2><%= post.title %></h2> -->
  <p><%= post.summary %></p>
  <ul class="nav nav-pills">
    <% post.tag_list.each do |tag| %>
      <li class="active tag-pill">
        <%= link_to tag, tag_path(tag) %>
        <!-- <a href="#"><%= tag %></a> -->
      </li>
    <% end %>
  </ul>
