<div class="col-md-6 col-sm-6">
  <h2>
    <%= link_to post.title, post_path(post.slug) %>
  </h2>
  <p>
    <% post.tag_list.each do |tag| %>
      <%= link_to tag, tag_path(tag), class: 'label label-primary' %>
    <% end %>
  </p>
  <p><%= post.summary %></p>

