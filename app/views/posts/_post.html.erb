<div class="col-md-6 col-sm-6">
  <h2>
    <%= link_to post.title, post_path(post.slug) %>
  </h2>
  <p>
    <% post.tag_list.each do |tag| %>
      <%= link_to tag, tag_path(tag), class: "label label-#{tag == params[:tag] ? 'success' : 'primary'}" %>
    <% end %>
  </p>
  <p><%= post.summary %></p>

  <p>
    <%= link_to post_path(post.slug), class: "btn btn-default" do %>
      Read more &raquo;
    <% end %>
  </p>
</div>
