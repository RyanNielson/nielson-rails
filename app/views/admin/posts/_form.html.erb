<%= form_tag @s3_direct_post.url, id: 'image_uploader', enforce_utf8: false, authenticity_token: false, multipart: true do %>
  <% @s3_direct_post.fields.each do |name, value| %>
    <%= hidden_field_tag name, value %>
  <% end %>
<% end %>

