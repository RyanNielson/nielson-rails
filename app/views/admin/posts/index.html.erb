<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="page-header">
        <h1>Posts <%= link_to 'New', new_admin_post_path, class: 'btn btn-success' %></h1>
      </div>


      <div class="table-responsive">
        <table class="table">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Title</th>
                <th>Slug</th>
                <th>Published at</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>
            <tbody>
             <% @posts.each do |post| %>
               <tr>
                 <td><%= post.title %></td>
                 <td><%= post.slug %></td>
                 <td><%= post.published_at %></td>
                 <td><%= link_to 'Show', post_path(post.slug) %></td>
                 <td><%= link_to 'Edit', edit_admin_post_path(post) %></td>
                 <td><%= link_to 'Destroy', admin_post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %></td>
               </tr>
             <% end %>
           </tbody>
          </table>
        </table>
      </div>
    </div>
  </div>
</div
